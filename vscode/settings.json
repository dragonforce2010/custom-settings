{
    "workbench.colorTheme": "One Dark Pro Vivid",
    "workbench.iconTheme": "material-icon-theme",
    // "vim.disableAnnoyingNeovimMessage": true,
    "window.zoomLevel": 1,
    // "vsicons.dontShowNewVersionMessage": true,
    // "workbench.panel.location": "right",
    "editor.multiCursorModifier": "ctrlCmd",
    "[css]": {},
    "sync.gist": "0baf8ef10b9c02ac2790fbbe86f1518e",
    "sync.lastUpload": "2018-04-23T13:52:11.848Z",
    "sync.autoDownload": false,
    "sync.autoUpload": false,
    "sync.lastDownload": "",
    "sync.forceDownload": false,
    "sync.host": "",
    "sync.pathPrefix": "",
    "sync.quietSync": false,
    "sync.askGistName": false,
    "terminal.integrated.fontFamily": "Meslo LG S for Powerline",
    "files.exclude": {
        "**/*.js": {
            "when": "$(basename).ts"
        },
        ".D*": {},
        "**/*.pyc": {},
        "**/*.swp": {},
        "**/*.un~": {},
        "**/*__init__.py": {},
        "**/*.ropeproject": {},
        "**/*__pycache__": {}
    },
    "explorer.confirmDragAndDrop": false,

    // keys go to normal mode from insert mode (default: "" disable)
    "vimStyle.imapEsc": "jk",
    "vimStyle.changeCursorStyle": true,
    "files.associations": {
        "*.h": "objective-c",
        ".m": "objective-c",
    },
    // "python.linting.pylintArgs": [
    //     "--rcfile=/Users/michaelz/Development/workspace/workspace4work/dragon/.pylintrc"
    // ],
    "python.linting.ignorePatterns": [
        ".vscode/*.py",
        "**/site-packages/**/*.py",
        "tests/resource/*.*",
    ],
    "python.linting.pylintArgs": ["--disable-ids","E1123"], //disable python sqlalchemy lint issue
    "search.exclude": {
        "tests/resource": true,
    },
    "sync.removeExtensions": true,
    "sync.syncExtensions": true,
    "eslint.autoFixOnSave": true,
    "gitlens.advanced.messages": {
        "suppressLineUncommittedWarning": true,
        "suppressShowKeyBindingsNotice": true
    },
    "gitlens.historyExplorer.enabled": true,
    "nativescript.analytics.enabled": true,
    "rubocop": {
        "lint": true, //enable all lint cops.
        "only": [/* array: Run only the specified cop(s) and/or cops in the specified departments. */],
        "except": [/* array: Run all cops enabled by configuration except the specified cop(s) and/or departments. */],
        "forceExclusion": true, //Add --force-exclusion option
        "require": [/* array: Require Ruby files. */],
        "rails": true //Run extra rails cops
    },
    "terminal.integrated.rendererType": "dom",
    "java.errors.incompleteClasspath.severity": "ignore",
    "gitlens.gitExplorer.location": "scm",
    "gitlens.historyExplorer.location": "scm",
    "gitlens.resultsExplorer.location": "scm",
    "editor.largeFileOptimizations": false,
    "eslint.alwaysShowStatus": true,
    "files.autoSave": "off",
    "gitlens.gitExplorer.files.layout": "tree"
}
